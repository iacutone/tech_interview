<%= form_for @changeset, @action, [class: "w-full max-w-sm mt-6"], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label f, :question_title, class: "label md:text-right md:mb-0" %>
    </div>
    <div class="md:w-2/3">
      <%= text_input f, :title, placeholder: "Title", class: "text-input" %>
      <%= error_tag f, :title %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label f, :programming_question, class: "label md:text-right md:mb-0" %>
    </div>
    <div class="md:w-2/3">
      <%= textarea f, :code, placeholder: "Code", class: "text-input" %>
      <%= error_tag f, :code %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label f, :programming_language, class: "label" %>
    </div>
    <div class="md:w-2/3">
      <%= select f, :language, @languages, placeholder: "Programming language", class: "text-input" %>
      <%= error_tag f, :language %>
    </div>
  </div>

  <%= inputs_for f, :company, fn c -> %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= label c, :name, class: "label" %>
      </div>
      <div class="md:w-2/3">
        <%= text_input c, :name, placeholder: "Company name", class: "text-input" %>
        <%= error_tag c, :name %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <%= label c, :website, class: "label" %>
      </div>
      <div class="md:w-2/3">
        <%= text_input c, :website, placeholder: "Company website", class: "text-input" %>
        <%= error_tag c, :website %>
      </div>
    </div>
  <% end %>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <%= submit "Save" %>
    </div>
  </div>
<% end %>
